<div id="<%= dom_id reading_task %>">
  <p>
    <strong>User:</strong>
    <%= reading_task.user_id %>
  </p>

  <p>
    <strong>Book:</strong>
    <%= reading_task.book_id %>
  </p>

  <p>
    <strong>Task category:</strong>
    <%= reading_task.task_category_id %>
  </p>

  <p>
    <strong>Priority:</strong>
    <%= reading_task.priority %>
  </p>

  <p>
    <strong>Completed:</strong>
    <%= reading_task.completed %>
  </p>

</div>
