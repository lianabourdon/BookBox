<%# app/views/welcome/index.html.erb %>

<!-- Banner Image (hero) -->
<div class="text-center mt-4 mb-5">
  <%= image_tag 'banner.png',
                alt: 'BookBox banner',
                class: 'img-fluid rounded shadow',
                style: 'max-height: 200px; width: auto;' %>
</div>

<!-- Welcome Copy -->
<div class="text-center my-5">
  <h1 class="display-4">Welcome to BookBox</h1>
  <p class="lead">
    Discover books, track your reading list, and share reviews.
  </p>
  <hr class="my-4">
  <p>
    Dive in by creating an account or logging in if you already have one.
  </p>
</div>

<!-- Bottom Buttons: Sign Up / Login or Welcome + Logout -->
<div class="text-center mb-5">
  <% if user_signed_in? %>
    <span class="h5">Welcome, <%= current_user.first_name %>!</span>
    <%= button_to 'Logout',
                  destroy_user_session_path,
                  method: :delete,
                  class: 'btn btn-outline-primary ms-3' %>
  <% else %>
    <%= link_to 'Sign Up',
                new_user_registration_path,
                class: 'btn btn-primary me-2' %>
    <%= link_to 'Login',
                new_user_session_path,
                class: 'btn btn-outline-primary' %>
  <% end %>
</div>

