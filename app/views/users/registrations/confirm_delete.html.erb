<!-- app/views/users/registrations/confirm_delete.html.erb -->
<div class="container mt-5">
  <div class="alert alert-danger text-center shadow p-4 rounded">
    <h2 class="mb-3">
      <i class="fas fa-triangle-exclamation fa-lg text-danger me-2"></i>
      Are you sure?
    </h2>
    <p class="lead">This action is <strong>irreversible</strong>. Your account and all associated data will be permanently deleted.</p>
    
    <div class="d-flex justify-content-center mt-4">
      <%= button_to "Yes, delete my account", registration_path(resource_name),
                    method: :delete,
                    form_class: "me-2",
                    data: { turbo_confirm: "Are you absolutely sure?" },
                    class: "btn btn-danger btn-lg" %>

      <%= link_to "Cancel", edit_user_registration_path, class: "btn btn-secondary btn-lg" %>
    </div>
  </div>
</div>

